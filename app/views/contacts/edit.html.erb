<h1>Update this contact</h1>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>

  <div>
    <%= label_tag :first_name, 'Update First Name: ' %>
    <%= text_field_tag :first_name, @contact.first_name, class:'form-control' %>
  </div>
  <div>
    <%= label_tag :middle_name, 'Update Middle Name: ' %>
    <%= text_field_tag :middle_name, @contact.middle_name, class:'form-control' %>
  </div>
  <div>
    <%= label_tag :last_name, 'Update Last Name: ' %>
    <%= text_field_tag :last_name, @contact.last_name, class:'form-control' %>
  </div>
  <div>
    <%= label_tag :email, 'Update Email: ' %>
    <%= text_field_tag :email, @contact.email, class:'form-control' %>
  </div>
  <div>
    <%= label_tag :phone_number, 'Update phone number: ' %>
    <%= text_field_tag :phone_number, @contact.phone_number, class:'form-control' %>
  </div>
  <div>
    <%= label_tag :bio, 'Update Bio: ' %>
    <%= text_field_tag :bio, @contact.bio, class:'form-control' %>
  </div>
  <div>
    <button type="button" class="btn btn-primary"><%= submit_tag 'Submit!' %></button>
  </div>
<% end %> 


<h1>Please enter a contact:</h1>
<%= form_tag '/contacts', method: :post do %>
  <div class="form-group">
    <%= label_tag :first_name, 'Enter First Name: ' %>
    <%= text_field_tag :first_name,"", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :middle_name, 'Enter Middle Name: ' %>
    <%= text_field_tag :middle_name,"", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :last_name, 'Enter Last Name: ' %>
    <%= text_field_tag :last_name,"", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :email, 'Enter Email: ' %>
    <%= text_field_tag :email,"", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :phone_number, 'Enter phone number: ' %>
    <%= text_field_tag :phone_number,"", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :bio, 'Enter biography: ' %>
    <%= text_field_tag :bio,"", class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag 'Submit!' %>
  </div>
<% end %> 

